{
  "name": "palletizer-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3005",
    "dev:server": "tsx src/server/index.ts",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "next build",
    "build:export": "next build && next export",
    "build:copy": "npm run build:export && node scripts/copy-to-esp32.mjs",
    "build:test": "npm run build:copy && cd out && npx http-server -p 3003",
    "start": "next start -p 3005",
    "start:server": "tsx src/server/index.ts",
    "start:all": "concurrently \"npm run start:server\" \"npm run start\"",
    "test": "node src/test/esp32-simulator.js",
    "test:all": "concurrently \"npm run start:server\" \"npm run test\"",
    "lint": "next lint",
    "clean": "rimraf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install"
  },
